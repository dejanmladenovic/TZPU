@model TZPU.Entities.Question
@{
    ViewBag.Title = "GetQuestion";
    Layout = "~/Views/Shared/NoMenu.cshtml";
}


<div class="question-text row">
    <div class="col-xs-12">
        <h3>@Model._textQuestion</h3>
    </div>
</div>
<div class="question-description row">
    <div class="col">
        @Html.Raw(Model._partOFTheQuestion.PrintQuestion())
    </div>
</div>
<div class="question-answers row">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        @for (int i = 0; i < Model._answers.Count; i++)
        {
            <div class="btn btn-secondary question-answer">
                <input class="answer-radio-button" type="radio" name="answers" id="@(i + 1) " autocomplete="off">
                @Html.Raw(Model._answers[i].PrintQuestion())
            </div>
        }
    </div>
</div>
<div class="row question-submit">
    <button class="btn btn-primary" id="question-submit" type="button" onclick="submitAnswer()">Odgovori</button>
</div>
